block variables
doctype html
html
    head
        meta(charset="utf-8")
        link(rel="apple-touch-icon" sizes="180x180" href='/assets/img/favicon/apple-touch-icon.png')
        link(rel="icon" type="image/png" sizes="32x32" href='/assets/img/favicon/favicon-32x32.png')
        link(rel="icon" type="image/png" sizes="16x16" href='/assets/img/favicon/favicon-16x16.png')
        meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
        meta(name="theme-color", content="#000000")
        title #{title} | #{title}
        script(src='/assets/js/main.js')

        if isDevelopment
            script(src='/assets/js/performance.js')
        if !isDevelopment
            link(rel='stylesheet' type='text/css' href='/assets/css/main.css')
    body.manager
        .wrapper
            aside.sidebar.col
                include partials/_menu
            .container.col
                block layout-content
        script(src='/assets/js/manager.js')
        if current == 'motori'
            script(src='/assets/js/channels.js')
        if current == 'tickets'
            script(src='/assets/js/tickets.js')
        if current == 'contabilita'
            script(src='/assets/js/contabilita.js')
        if current == 'rete'
            script(src='/assets/js/network.js')
        if current == "allarmi"
            script(src='/assets/js/allarmi.js')
        if current == "testperiferiche"
            //script(src='/assets/js/testperiferiche.js')
        if current == "erogazionemanuale"
            script(src='/assets/js/erogazionemanuale.js')

        
