block layout-content
    .container-fluid.pt-5.menu-manager
        .title-header.p-3.pb-md-5.mx-auto.text-center
            h2.display-5.fw-normal.mb-0.page-title
                i.bi.bi-folder
                |  Gestione file
        main
            .row
                .col-12.me-0.text-center
                    .card.mb-4.first-level-menu
                        .card-body
                            ul.list-unstyled.mt-3.d-flex.row.gx-4
                                li.col-6.mb-4
                                    a.w-100.btn.btn-lg.btn-navigator(href='/file-manager/caricamultimedia')
                                        div
                                            i.bi-cloud-arrow-down
                                            h2 Download file da cloud
                                li.col-6.mb-4
                                    a.w-100.btn.btn-lg.btn-navigator(href='/file-manager/caricamultimediausb')
