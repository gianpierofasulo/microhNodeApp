extends ../layout.pug

block layout-content
    .container-fluid.pt-5.menu-manager
        .title-header.p-3.pb-md-5.mx-auto.text-center
            h2.display-5.fw-normal.mb-0.page-title
                i.bi.bi-shop
                |  Negozio
        main
            .row
                .col-12.me-0.text-center
                    .card.mb-4.first-level-menu
                        .card-body
                            ul.list-unstyled.mt-3.d-flex.row.gx-4
                                each motore in motori
                                    if motore.id == 'Dispensers' && motore.enabled == true
                                        li.col-6.mb-4
                                            a.w-100.btn.btn-lg.btn-navigator(href='/shop/motori/'+motore.group)
                                                div
                                                    i.bi.bi-building-add
                                                    h2 Erogatori #{motore.group}
                                if behavior.vetrina_digitale == '1'
                                    li.col-6.mb-4
                                        a.w-100.btn.btn-lg.btn-navigator(href='/shop/vetrine')
                                            div
                                                i.bi.bi-shop-window
                                                h2 Vetrine
                                
                                    li.col-6.mb-4
                                        a.w-100.btn.btn-lg.btn-navigator(href='/shop/banner')
                                            div
                                                i.bi.bi-images
                                                h2 Banner
